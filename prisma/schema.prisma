model Test {
  name              String @id
  testTotalDuration Int

  filters   Filters? @relation(fields: [filtersId], references: [id])
  filtersId String?  @unique

  sectionWiseStats SectionWiseStat[]
  sections         Section[]
  createdAt        DateTime          @default(now())
}

model Filters {
  id          String @id @default(cuid())
  incorrect   Int
  correct     Int
  unattempted Int

  test Test?
}

model SectionWiseStat {
  id     String @id @default(cuid())
  test   Test   @relation(fields: [testId], references: [name])
  testId String

  marksScored      Float
  sectionMarks     Float
  accuracy         Float
  totalQuestions   Int
  attemptDuration  Float
  correctAnswers   Int
  inCorrectAnswers Int
  unAttempted      Int
  name             String
  order            Int
  sectionDuration  Float
}

model Section {
  id     String @id @default(cuid())
  test   Test   @relation(fields: [testId], references: [name])
  testId String

  sectionDuration Float
  sectionMarks    Float
  name            String
  order           Int

  questions Question[]
}

model Question {
  id        String  @id @default(cuid())
  section   Section @relation(fields: [sectionId], references: [id])
  sectionId String

  order       Int
  isAttempted Boolean
  isCorrect   Boolean
  timeTaken   Float

  marks   Marks?  @relation(fields: [marksId], references: [id])
  marksId String? @unique
}

model Marks {
  id       String @id @default(cuid())
  positive Float
  negative Float

  question Question?
}
